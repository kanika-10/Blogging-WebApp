<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>HomePage</title>
  </head>
  <body>
    <%- include("./partials/navbar") %>
    <%- include("./partials/featureBar") %>
    
    <div class="container mt-3">
      <div class="row row-cols-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card col mt-2" style="width: 18rem">
            <img
              src="<%= blog.coverImageURL%>"
              class="card-img-top"
              alt="..."
              width="10rem"
            />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read</a>
              <% if (locals.user) { %>
               <form action="/blog/favourites/<%= blog._id %>" method="post">
              <button class="btn btn-success mt-2">Favourite</button>
              </form>
              <% } %>
            </div>
          </div>
      </div>
      <% }) %>
    </div>
    <% if (!blogs.length) { %>
         <h2 class="d-flex">No blog found in this category</h2>
        <% } %>
    
    <%-include("./partials/scripts") %>
  </body>
</html>
